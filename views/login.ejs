<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/sb-admin-2.css" rel="stylesheet">
    <link href="css/hboss.css" rel="stylesheet">

    <title>H-BOSS</title>
 </head>
<body>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body" style="padding:15px;">
                    <form role="form">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="E-mail" name="email" type="email" id="username" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="password" id="password" type="password" value="">
                            </div>
                            <small class="help-block validate-message" style="display: none">Please Enter valid user Name and password.</small>
                            <!-- Change this to a button or input when using this as a form -->
                            <a class="login-btn btn btn-lg btn-success btn-block">Login</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="lib/jquery/jquery-3.2.1.min.js"></script>
<script type="text/javascript">
    $( document ).ready(function() {
       $('.login-btn').on('click',function(e){
           var userName = $("#username").val();
           var passWord = $("#password").val();
           if (!userName || !passWord) {
               $('.validate-message').show();
               return false;
           }
           $.ajax({
               type: "POST",
               url: '/auth',
               data: {'username': userName, 'password': passWord, action: 'signin'},
               cache: false,
               success: function (_data) {
                   if (_data.status) {
                       localStorage.setItem("loggedUser", JSON.stringify(_data.loggedUser));
                       // if (_data.loggedUser.IsActive) {
                       location.href = "/home";
                       console.log(_data.token);
                       /*}
                        else {
                        location.href = "/login";
                        }*/
                   }
                   else {
                       $('.validate-message').show();
                       //location.href = "/login";
                       //tat.$("#incorrect-credin-info").show();
                   }
               },
               error: function (_options, _thrownError) {
                   console.log(_thrownError);
               }
           });
       });
    });
</script>
</body>
</html>